<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input type="email" id="email-login" placeholder="Email" required>
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input type="password" id="password-login" placeholder="Password" required>      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">Name:</label>
        <input class="form-input" type="text" id="name-signup" placeholder="Name" required>
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" placeholder="Email" required>
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" placeholder="Password" required>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign Up</button>
      </div>
    </form>
  </div> 
  <div class="col-md-6">
    <h2>Organization Sign-In</h2> 

    <form class="form organization-form">
      <div class="form-group">
        <label for="organization-signup">Organization Name:</label>
        <input class="form-input" type= "text" id= "organization-signup"/>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>